{
    "input": "data/sample_board.png",
    "pyramid": {
        "levels": 4,
        "blur_levels": 1
    },
    "lsd": {
        "magnitude_threshold": 1.5,
        "angle_tolerance_deg": 22.5,
        "min_length": 3.0,
        "enforce_polarity": true,
        "limit_normal_span": false,
        "normal_span_limit_px": 2.0
    },
    "refine": {
        "anchor_search_radius": 3.0,
        "gradient_threshold": 0.08,
        "anchor_step": 0.5,
        "region_padding_px": 6.0,
        "region_angle_tolerance_deg": 18.0,
        "region_min_pixels": 16,
        "region_max_pixels": 512,
        "region_min_alignment": 0.55,
        "min_length_px": 4.0,
        "normal_span_limit_px": null,
        "max_seeds": 3
    },
    "output": {
        "dir": "out/segment_demo"
    }
}
